{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sitting_kit": {
      "states": {
        "default": {
          "transitions": [
            {"walking": "(1.0)"}
          ],
          "on_entry": [
            "/function sitting_kit",
            "/function sitting_kit_login"
          ]
        },
        "walking": {
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": [
            "/function sitting_kit",
            "/function sitting_kit_login"
          ]
        }
      }
    },
    "controller.animation.has_rider": {
      "states": {
        "default": {
          "transitions": [
            {"riding": "query.has_rider"},
            {"standing": "!query.has_rider"}
          ]
        },
        "riding": {
          "transitions": [
            {
              "default": "!query.has_rider"
            }
          ],
          "on_entry": [
            "/tag @s add riding",
            "/tag @p add player_riding",
            "/tag @p add player_riding2"
          ]
        },
        "standing": {
          "transitions": [
            {
              "default": "query.has_rider"
            }
          ],
          "on_entry": [
            "/tell @p 立った( ᐛ )",
            "/tag @s remove riding",
            "/execute @s ~~~ tag @a[r=2] remove player_riding",
            "/tp @p[tag=player_riding2,tag=!player_riding] ~~1~",
            "/execute @s ~~~ tag @a[r=2] remove player_riding2"
          ]
        }
      }
    }
  }
}
