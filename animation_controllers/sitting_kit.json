{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sitting_kit": {
      "states": {
        "default": {
          "transitions": [
            {"walking": "(1.0)"}
          ],
          "on_entry": [
            "/function sitting_kit",
            "/function sitting_kit_login"
          ]
        },
        "walking": {
          "transitions": [
            {
              "default": "(1.0)"
            }
          ],
          "on_entry": [
            "/function sitting_kit",
            "/function sitting_kit_login"
          ]
        }
      }
    },
    "controller.animation.has_rider": {
      "states": {
        "default": {
          "transitions": [
            {"riding": "query.has_rider"},
            {"standing": "!query.has_rider"}
          ]
        },
        "riding": {
          "transitions": [
            {
              "default": "query.has_rider"
            }
          ],
          "on_entry": [
            "/tag @p add player_riding",
            "/tag @p add stand_judge"
          ]
        },
        "standing": {
          "transitions": [
            {
              "default": "query.has_rider"
            }
          ],
          "on_entry": [
            "/tag @a[r=1.5] remove player_riding",
            "/gamerule sendcommandfeedback false",
            "/execute @s[scores={sitting_kit=5..}] ~~~ tp @p[r=1.5,rm=1.0,tag=!player_riding,tag=stand_judge] ~~0.5~",
            "/gamerule sendcommandfeedback true"
          ]
        }
      }
    }
  }
}
